  filter(time_of_day=="Night") %>%  
  group_by(ID,decision, day_type,Light) %>%
  count(decision, .drop = FALSE)

new_all_days_activity_after_sunset$night_length <- ifelse(new_all_days_activity_after_sunset$Light=="Trondheim", 14, 19)
